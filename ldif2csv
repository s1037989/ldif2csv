#!/usr/bin/perl

use Net::LDAP;
use Net::LDAP::LDIF;
$ldif = Net::LDAP::LDIF->new(\*STDIN,"r",onerror=>'undef');
print join("\t", @ARGV), "\n" if $ENV{HEADER};
while( not $ldif->eof() ) {
	$entry = $ldif->read_entry();
	if ( $ldif->error() ) {
		print "Error msg: ", $ldif->error(), "\n";
		print "Error lines:\n", $ldif->error_lines(), "\n";
	} else {
		$_ = join("\t", map { $_ eq 'dn' ? $entry->dn : $_ eq 'ou' ? ou($entry->dn) : defined $entry->get_value($_) ? $entry->get_value($_) : '' } @ARGV)."\n";
		print unless /^\s*$/;
	}
}

sub ou {
	local $_ = shift;
	/^[^,]+,(.*?)$/;
	return $1;
}
